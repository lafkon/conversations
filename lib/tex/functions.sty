  \newcommand{\emptypage}{
   \twocolumn[]\thispagestyle{empty}
    \onecolumn}
% -------------------------------------------------------------------- %
   \newcommand\includepages[3]{
    \includepdf[pages={#2},offset=15 0,scale=.9]{#1}
  }
% -------------------------------------------------------------------- %
  \newcommand{\currentchaptertitle}{}
  \newcommand\invisiblechapter[1]{%
  \refstepcounter{chapter}%
  \addcontentsline{toc}{chapter}{\protect\numberline{\thechapter}#1}%
  \chaptermark{#1}
% CUSTOM COMMAND TO STORE THE CHAPTER TITLE
  \renewcommand{\currentchaptertitle}{#1}
  }
% -------------------------------------------------------------------- %
  \newcommand\includepagesplus[6]{
 % \cleardoublepage
    \invisiblechapter{#6}
     \includepdf[pages={#2},#4,#5,clip,%
                 scale=#3,pagecommand={\pagestyle{plain}}]{#1}

  }
